<UserControl x:Class="HTML5App1.shangJin.cell.huiFuCell"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="120">

    <Grid x:Name="LayoutRoot" Background="#19D4D4D4">
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="昵称" VerticalAlignment="Top" Height="40" Width="70" Foreground="#DEFFFFFF"/>
        <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="{Binding NiCheng}" VerticalAlignment="Top" Height="40" Width="310" Foreground="#DEFFFFFF" Margin="0,0,95,0"/>
        <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="内容" VerticalAlignment="Top" Height="40" Width="70" Foreground="#DEFFFFFF" Margin="0,40,0,0"/>
        <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="{Binding Content}" VerticalAlignment="Top" Height="70" Width="315" Foreground="#DEFFFFFF" Margin="0,40,95,0"/>
        <Grid HorizontalAlignment="Left" Height="2" Margin="0,116,0,0" VerticalAlignment="Top" Width="480" Background="White"/>

    </Grid>
</UserControl>